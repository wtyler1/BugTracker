@model IEnumerable<BugTracker.Models.AdminUserViewModel>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Users</title>
   
    
   
</head>
<body class="layout layout-header">
    <div>
        <table>
            <tr>
                <th>
                    Name
                </th>


                <th style="padding: 4px 0px 4px 0px">
                    Roles
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.user.FullName)

                    </td>
                    <td style="padding: 0px 4px 0px 4px">
                        @foreach (var role in item.role)
                        {

                            @Html.DisplayFor(m => role)


                        }
                    </td>
                    <td style="padding: 2px 2px 2px 2px">
                        @Html.ActionLink("Change Roles", "SelectRole", "Admin", new { id = item.user.Id }, new { @class = "btn btn-default btn-sm" })
                    </td>
                </tr>
            }

        </table>
    </div>

</body>

</html>
