@model IEnumerable<BugTracker.Models.Ticket>
   <head>
        <meta name="theme-color" content="#ffffff">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,400italic,500,700">
       
        <link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
        <link href="~/css/demo.min.css" rel="stylesheet" />
    </head>
    <body class="layout layout-header-fixed">
        <div class="layout-header">

            <div class="text-center m-b">
                <h3 class="m-b-0">Tickets</h3>
                <small>@Html.ActionLink("Add Ticket", "Create")</small>
            </div>
            <div class="row">
                <!--TicketSample Data-->
                <div class="row gutter-xs">
                    <!-- TicketSample Unresolved-->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="media">
                                    <div class="media-middle media-left">
                                        <span class="bg-default sq-64 circle">
                                            <span class="icon icon-flag"></span>
                                        </span>
                                    </div>
                                    <div class="media-middle media-body">
                                        <h2 class="media-heading">
                                            <span class="fw-l"><!-- Number of Issues-->
                                            
                                            </span>
                                            <small>Issued</small>
                                        </h2>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--TicketSample Resolved-->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="media">
                                    <div class="media-middle media-left">
                                        <div class="media-chart">
                                            <canvas data-chart="doughnut" data-animation="false" data-labels='["Resolved", "Unresolved"]' data-values='[{"backgroundColor": ["#e67e22", "#e5ebf1"], "data": [879, 377]}]' data-hide='["legend", "scalesX", "scalesY", "tooltips"]' height="64" width="64"></canvas>
                                        </div>
                                    </div>
                                    <div class="media-middle media-body">
                                        <h2 class="media-heading">
                                            <span class="fw-l">
                                                <!-- Number Resolved-->
                                            </span>
                                            <small>Resolved</small>
                                        </h2>
                                        <small>
                                            <!-- Percentage of Resolved Tickets-->
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- TicketSample -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="media">
                                    <div class="media-middle media-left">
                                        <div class="media-chart">
                                            <canvas data-chart="doughnut" data-animation="false" data-labels='["Resolved", "Unresolved"]' data-values='[{"backgroundColor": ["#e5ebf1", "#e67e22"], "data": [879, 377]}]' data-hide='["legend", "scalesX", "scalesY", "tooltips"]' height="64" width="64"></canvas>
                                        </div>
                                    </div>
                                    <div class="media-middle media-body">
                                        <h2 class="media-heading">
                                            <span class="fw-l">
                                                <!-- Number of unresolved-->
                                            </span>
                                            <small>Unresolved</small>
                                        </h2>
                                        <small>
                                            <!-- Percentage of Unresolved-->
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="panel">
                        <div class="panel-body">
                            <div class="table-responsive">
                               
                                <table id="myTable" class="table table-middle ">
                                    <thead>
                                        <tr>

                                            <th>User</th>
                                            <th>
                                                Project Name
                                            </th>
                                           
                                            <th>Ticket Title</th>
                                            <th>Created</th>
                                            <th>Updated</th>
                                            <th>
                                                TicketType
                                            </th>
                                            <th>Status</th>
                                            <th>Priority</th>
                                            <th>Assigned to</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                         @foreach (var item in Model)
                                            {
                                        <tr>
                                           
                                            <td>
                                                <span class="icon-with-child m-r">
                                                    <img class="circle" width="36" height="36" src="~/img/user-av.jpg" alt="Name">
                                                 </span>
                                                @Html.DisplayFor(modelItem => item.OwnerUser.FirstName)
                                            </td>
                                            <td> @Html.DisplayFor(modelItem => item.Project.Name)</td>
                                           
                                            <td class="maw-320">
                                                <span class="truncate">  @Html.DisplayFor(modelItem => item.Title)</span>
                                            </td>
                                            <td> @Html.DisplayFor(modelItem => item.Created)</td>
                                            <td> @Html.DisplayFor(modelItem => item.Update)</td>
                                            <td> @Html.DisplayFor(modelItem => item.TicketType.Name)</td>
                                            <td>
                                                <span class="label label-info label-pill">  @Html.DisplayFor(modelItem => item.TicketStatus.Name)</span>
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.TicketPriorities.Name)</td>
                                            <td>@Html.DisplayFor(modelItem => item.AssignedToUser.FirstName)</td>
                                            <td>
                                              <div class="btn-group pull-right dropdown">
                                                <button class="btn btn-link link-muted" aria-haspopup="true" data-toggle="dropdown" type="button">
                                                  <span class="icon icon-ellipsis-h icon-lg icon-fw"></span>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-right">
                                                  
                                                     <li style="text-align:center">   @Html.ActionLink("Edit", "Edit", new { id = item.Id }) </li>
                                                    <li style="text-align:center"> @Html.ActionLink("Details", "Details", new { id = item.Id })</li>
                                                    <li style="text-align:center"> @Html.ActionLink("Delete", "Delete", new { id = item.Id })</li>
                                                </ul>
                                              </div>
                                            </td>

                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


       
        @section scripts{
     
        <script src="~/Scripts/jquery.dataTables.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#myTable').DataTable();
            })
         
</script>
        }
     
       
    </body>

